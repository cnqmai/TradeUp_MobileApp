<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Hình viền ngoài (gradient) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="@color/yellow_bold"
                android:endColor="@color/red"
                android:type="linear" />
        </shape>
    </item>

    <!-- Hình nền trong (transparent) -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>
