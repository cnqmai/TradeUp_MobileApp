<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F2F5"
    tools:context=".fragment.PaymentMethodsFragment">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_payment_methods"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back_button_payment_methods"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phương thức Thanh toán"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Payment Methods Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức Thanh toán"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Credit/Debit Cards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_credit_card"
                            app:tint="@color/orange_bold"
                            android:contentDescription="Credit Card Icon"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thẻ tín dụng/thẻ ghi nợ"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thêm hoặc quản lý thẻ của bạn"
                                android:textColor="@color/gray"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_add_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thêm thẻ"
                        android:backgroundTint="@color/orange"
                        app:cornerRadius="8dp"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="16dp"/>

                    <!-- UPI & Wallets -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wallet"
                            app:tint="@color/orange_bold"
                            android:contentDescription="Wallet Icon"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UPI &amp; Ví"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thực hiện thanh toán tức thì"
                                android:textColor="@color/gray"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_link_upi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Liên kết UPI"
                        android:backgroundTint="@color/orange"
                        app:cornerRadius="8dp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Your Saved Cards Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thẻ đã lưu của bạn"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_saved_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="2"
                tools:listitem="@layout/item_saved_card"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/text_no_saved_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có thẻ nào được lưu."
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Recent Transactions Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giao dịch gần đây"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_recent_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_recent_transaction"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/text_no_recent_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có giao dịch gần đây nào."
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Secure Payment Section (This looks like a separate flow, but for UI, we'll place it here) -->
            <TextView
                android:id="@+id/tv_secure_payment_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán an toàn"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_secure_payment_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guitar Cổ điển"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_secure_payment_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="599.99 $"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange_bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="1"
                            android:gravity="center"
                            android:background="@drawable/bg_circle_icon"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giữ Thanh toán"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khoản thanh toán của bạn sẽ được giữ an toàn."
                                android:textColor="@color/gray"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="2"
                            android:gravity="center"
                            android:background="@drawable/bg_circle_icon"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vận chuyển mặt hàng"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Người bán vận chuyển mặt hàng."
                                android:textColor="@color/gray"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="3"
                            android:gravity="center"
                            android:background="@drawable/bg_circle_icon"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giao hàng &amp; Kiểm tra"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bạn nhận và duyệt mặt hàng."
                                android:textColor="@color/gray"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="4"
                            android:gravity="center"
                            android:background="@drawable/bg_circle_icon"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giải ngân Thanh toán"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khoản thanh toán được giải ngân cho người bán."
                                android:textColor="@color/gray"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_proceed_to_payment_secure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiến hành Thanh toán - 599.99 $"
                        android:backgroundTint="@color/orange"
                        app:cornerRadius="8dp"
                        android:textColor="@android:color/white"
                        android:paddingVertical="12dp"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>