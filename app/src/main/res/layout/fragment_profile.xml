<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/profile_picture"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/orange_skin"
                android:src="@drawable/img_profile_placeholder" />

            <TextView
                android:id="@+id/text_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_name"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_rating_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@color/yellow_star"
                android:rating="4.5"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:secondaryProgressTint="@color/yellow_star"
                android:stepSize="0.5" />

            <!-- Total Transactions Display -->
            <TextView
                android:id="@+id/tv_total_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng giao dịch: 0"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_bio"
                        app:tint="@color/orange_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_bio"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_bio"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_input"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_contact"
                        app:tint="@color/orange_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_contact"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_email"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:backgroundTint="@color/yellow_slight"
                android:paddingHorizontal="8dp"
                android:paddingVertical="0dp"
                android:background="@drawable/bg_card_rounded">

                <LinearLayout
                    android:id="@+id/row_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp" >

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_circle_icon"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/edit_profile"
                            android:src="@drawable/ic_edit"
                            app:tint="@color/orange_bold" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/edit_profile"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DADADA" />

                <LinearLayout
                    android:id="@+id/row_change_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="2dp">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_circle_icon"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/change_photo"
                            android:src="@drawable/ic_photo"
                            app:tint="@color/orange_bold" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/change_photo"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DADADA" />

                <LinearLayout
                    android:id="@+id/row_my_listings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="2dp">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_circle_icon"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/my_listings"
                            android:src="@drawable/ic_list"
                            app:tint="@color/orange_bold" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/my_listings"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DADADA" />

                <!-- Re-added: row_transaction_history -->
                <LinearLayout
                    android:id="@+id/row_transaction_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="2dp">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_circle_icon"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Transaction History Icon"
                            android:src="@drawable/ic_transaction_history"
                            app:tint="@color/orange_bold" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/transaction_history"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray" />
                </LinearLayout>

                <View
                    android:id="@+id/divider_admin_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DADADA"
                    android:visibility="gone" /> <!-- Hidden by default -->

                <!-- NEW: Admin Dashboard Row (hidden by default) -->
                <LinearLayout
                    android:id="@+id/row_admin_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="2dp"
                    android:visibility="gone"> <!-- Hidden by default -->

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_circle_icon"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Admin Dashboard Icon"
                            android:src="@drawable/ic_admin_dashboard"
                            app:tint="@color/orange_bold" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Admin Dashboard"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DADADA" />

                <LinearLayout
                    android:id="@+id/row_account_management"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="2dp">

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_circle_icon"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/account_management"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/orange_bold" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/account_management"
                        android:textColor="@color/red_bold"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray" />
                </LinearLayout>

            </LinearLayout>

            <!-- NEW: History & Activity Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lịch sử &amp; Hoạt động"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/btn_saved_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mặt hàng đã lưu"
                        android:drawableStart="@drawable/ic_bookmark"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <Button
                        android:id="@+id/btn_offer_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lịch sử đề nghị"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <Button
                        android:id="@+id/btn_purchase_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lịch sử mua hàng"
                        android:drawableStart="@drawable/ic_shopping_bag"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <Button
                        android:id="@+id/btn_sales_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lịch sử bán hàng"
                        android:drawableStart="@drawable/ic_sell"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <!-- NEW: Payment History Button -->
                    <Button
                        android:id="@+id/btn_payment_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lịch sử thanh toán"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <!-- NEW: Payment Methods Button -->
                    <Button
                        android:id="@+id/btn_payment_methods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phương thức thanh toán"
                        android:drawableStart="@drawable/ic_credit_card"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <Button
                        android:id="@+id/btn_item_analytics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phân tích tin đăng của tôi"
                        android:drawableStart="@drawable/ic_analytics"
                        android:drawablePadding="8dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@android:color/black"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/row_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_logout_highlight"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:paddingHorizontal="2dp"
                android:layout_marginTop="20dp">

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_circle_icon"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/logout"
                        app:tint="@color/orange_bold"
                        android:src="@drawable/ic_logout" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/logout"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>