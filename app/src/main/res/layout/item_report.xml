<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_report_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="@string/report_type_placeholder"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_report_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/report_timestamp_placeholder"
                android:textSize="12sp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_report_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/report_reason_placeholder"
            android:textSize="14sp"
            android:textColor="@color/red_bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_report_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/report_status_placeholder"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/green_bold" /> <!-- Using blue for pending, can be dynamic -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
