<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/search_filter"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/orange_bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:prompt="@string/prompt_category" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="2">

        <EditText
            android:id="@+id/edit_price_from"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="@string/price_from"
            android:inputType="number" />

        <Space android:layout_width="8dp" android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_price_to"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="@string/price_to"
            android:inputType="number" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_condition"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:prompt="@string/prompt_condition" />

    <CheckBox
        android:id="@+id/checkbox_use_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="@string/use_gps" />

    <SeekBar
        android:id="@+id/seekbar_distance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:max="100" />

    <TextView
        android:id="@+id/tv_distance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance_value"
        android:textSize="18sp"
        android:layout_marginTop="4dp" />

    <Spinner
        android:id="@+id/spinner_sort"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:prompt="@string/prompt_sort" />

    <Button
        android:id="@+id/btn_apply_filter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:backgroundTint="@color/orange"
        android:text="@string/apply_filter"
        android:layout_marginTop="16dp" />
</LinearLayout>
