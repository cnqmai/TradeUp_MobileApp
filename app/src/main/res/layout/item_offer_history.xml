<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_offer_item_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder"
            android:background="@drawable/rounded_corners_background"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/content_description_view_offer_details" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_offer_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_item_title_placeholder"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_offer_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_price_placeholder"
                android:textSize="14sp"
                android:textColor="@color/orange_bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_offer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_status_placeholder"
                android:textSize="14sp"
                android:textColor="@color/green_bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_offer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_date_placeholder"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_view_offer_details"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="@string/content_description_view_offer_details"
            app:tint="@android:color/darker_gray"
            android:padding="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>