<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_saved_item_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder"
            android:background="@drawable/rounded_corners_background"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_saved_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saved_item_title_placeholder"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_saved_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saved_item_price_placeholder"
                android:textSize="14sp"
                android:textColor="@color/green_bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_saved_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saved_item_status_placeholder"
                android:textSize="14sp"
                android:textColor="@color/orange_bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_remove_saved_item"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/content_description_remove_saved_item"
            app:tint="@color/red_bold"
            android:padding="2dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>
</androidx.cardview.widget.CardView>