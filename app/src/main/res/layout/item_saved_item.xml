<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_saved_item_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder"
            android:background="@drawable/rounded_corners_background"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_saved_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Mặt hàng đã lưu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_saved_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 1.000.000 VNĐ"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_saved_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Đang bán"
                android:textSize="14sp"
                android:textColor="@color/design_default_color_primary" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_remove_saved_item"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Xóa khỏi danh sách đã lưu"
            app:tint="@android:color/holo_red_light"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
