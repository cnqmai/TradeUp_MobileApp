        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_tradeup_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TradeUp"
        tools:targetApi="31">

        <!-- MainActivity: Activity chÃ­nh -->
        <activity
            android:name=".features.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity android:name=".features.cart.CartActivity" />
        <activity android:name=".features.auth.EmailVerificationActivity" />

    </application>

</manifest>
